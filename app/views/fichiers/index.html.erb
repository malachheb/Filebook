<table class="table table-striped table-bordered table-condensed">
  <tr>
    <th>Name</th>
    <th>Type</th>
    <th>Size</th>
    <th>Last update</th>
    <th colspan="3"></th>
  </tr>

<% @fichiers.each do |fichier| %>
  <tr>
    <!-- <td><%= fichier.fhash %></td> -->
    <td><%= fichier.data_file_name %></td>
    <!-- <td><%= fichier.extension %></td> -->
    <td><%= fichier.data_content_type %></td>
    <td><%= fichier.data_file_size %></td>
    <td><%= fichier.updated_at %></td>
    <td><%= link_to '<i class="icon-eye-open"/>'.html_safe , fichier, :class => '' %></td>
    <td><%= link_to '<i class="icon-pencil"/>'.html_safe, edit_fichier_path(fichier), :id => 'edit_file', :remote => true %></td>
    <td><%= link_to '<i class="icon-trash"/>'.html_safe, fichier, :confirm => 'Are you sure?', :method => :delete, :remote=>true, :id => 'delete_fichier' %></td>
  </tr>
<% end %>
</table>

