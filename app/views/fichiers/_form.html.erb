<%= bootstrap_form_for(@fichier,:format => 'js', :remote => true) do |f| %>
   <div class="modal-header">
    <a class="close" data-dismiss="modal">Ã—</a>
    <% if @fichier.id.nil? then %>
    <% name = 'Upload' %>
    <h3 id="title" >New File</h3>
    <% else %>
     <% name = 'Edit' %>
    <h3 id="title" >Edit File</h3>
    <% end %>
  </div>
  <div class="modal-body">
    <%= f.file_field :data %>
    <%= f.text_area :description, :cols => "60", :rows => "3" %>
    <%= f.text_area :tags, :cols => "60", :rows => "3"%>
  </div>
  <div class="modal-footer">
    <div class="actions">
      <%= f.submit name , :class =>'btn btn-primary'%>
    </div>
  </div>
  <% end %>
