<h5>Followers</h5>
<% @users.each do |user| %>

<li class="divider"></li>
<div class="container-fluid">
  <div class="row-fluid">
    <div class="span2">
       <img style="height: 60px; width: 70px; " src="<%=asset_path "profil.png"%>" alt="profil"/>
    </div>
    <div class="span8">
      <%= user.pseudo %>
    </div>
     <div class="span2">
     <% if current_user.following.exists?(user) %>
        <%= link_to 'Unfollow', unfollow_user_path(user), :remote => true, :class => "btn btn-danger" %>
     <% else %>
       	  <%= link_to 'Following', follow_user_path(user), :remote => true, :class => "btn btn-primary" %>
     <% end %>
     </div>
  </div>
</div>
<% end %>
